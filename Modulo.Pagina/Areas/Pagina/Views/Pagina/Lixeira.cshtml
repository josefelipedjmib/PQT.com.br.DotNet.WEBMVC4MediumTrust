@model string[] 
@{
    ViewBag.Title = "Lixeira de Páginas";
}
<div class="row">
    @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
    {
    <div class="mb-3">
        <h5 class="alert alert-info">@Html.Raw(ViewBag.Mensagem)</h5>
    </div>
    }
    <h1>Lixeira das Paginas do Site</h1>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nome da Página</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pagina in Model)
        {
            var paginaNome = @Path.GetFileName(pagina).ToLower().Replace(".xml", "_xml");
            <tr>
                <th scope="row">@paginaNome</th>
                <td>
                    <a href="/admin/pagina/detalhar/@paginaNome" class="btn btn-info" role="button">Detalhar</a>
                    -
                    <a href="/admin/pagina/restaurar/@paginaNome" class="btn btn-warning" role="button">Restaurar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
