@model Domain.Models.Retorno<Essenciais.MVC.Models.Usuario>
@{
    ViewBag.Title = "Detalhar - " + Model.Data.NomeExibicao;
}
<div class="row">
    <h1>Usuario: <em>@Model.Data.NomeExibicao</em></h1>

    @Html.Partial("_UsuarioInfos", Model.Data)

    <div class="mb-3">
        <a href="/admin/usuario/editar/@Model.Data.Id@(Request.Url.Query)" class="btn btn-primary">Editar Usuário</a>
        -
        <a href="/admin/usuario/apagar/@Model.Data.Id@(Request.Url.Query)" class="btn btn-warning">Apagar Usuário</a>
        -
        <a href="/admin/usuario/@(Request.Url.Query)" class="btn btn-secondary">Listar Usuários</a>
        -
        <a href="#" class="btn btn-info btn-resetar-usuario" data-id="@Model.Data.Id" data-nome="@Model.Data.NomeExibicao">Resetar Usuário</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/resetusuarioconfirma.min.js")
}
