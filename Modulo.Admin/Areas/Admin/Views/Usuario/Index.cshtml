@model  Domain.Models.RetornoPaginado<List<Dictionary<string, object>>>
@{
    ViewBag.Title = "Usuário";
}
<div class="row">
    @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
    {
        <div class="mb-3">
            <h5 class="alert alert-info">@Html.Raw(ViewBag.Mensagem)</h5>
        </div>
    }
    <div class="col">
        <h1>Lista de Usuários cadastrados no sistema</h1>
        <div>
            <a href="/admin/usuario/novo" class="btn btn-primary">Novo</a>
        </div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                @Html.Partial("_ListTableHead", Model)
            </thead>
            <tbody>
                @Html.Partial("_ListTableBodyAdmin", Model)
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Paginacao", Model.GetPaginado())

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/resetusuarioconfirma.min.js")
}
