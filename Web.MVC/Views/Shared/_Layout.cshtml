<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title José Felipe - DJ Mib - Paquetá</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="/" class="navbar-brand">José Felipe - DJ Mib</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar a navegação" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li><a href="/" class="nav-link">Página Inicial</a></li>
                    <li><a href="/parceiros" class="nav-link">Parceiros</a></li>
                    @*<li>@Html.ActionLink("Contato", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">

        <div id="mensagemSucesso" class="alert alert-success d-none" role="alert">
            Sucesso!
        </div>
        <div id="mensagemErro" class="alert alert-danger d-none" role="alert">
            Erro!
        </div>
        <div id="mensagemAviso" class="alert alert-waning d-none" role="alert">
            Aviso!
        </div>
        <div id="mensagemInfo" class="alert alert-info d-none" role="alert">
            Informação!
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2003 - @DateTime.Now.Year - PQT - Profissionais Qualificados em Tecnologia</p>
        </footer>
    </div>

    <!-- Modal de confirmação -->
    <div class="modal fade" id="modalConfirmacao" tabindex="-1" aria-labelledby="modalConfirmacaoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmacaoLabel">Confirmar?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p id="textoConfirmacao">Deseja confirmar?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btnConfirmacaoNao" data-bs-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-primary" id="btnConfirmacaoSim">Sim</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/site.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
